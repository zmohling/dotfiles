[colors]
background = ${xrdb:color8:#b4c6c0}
foreground = ${xrdb:color15:#010101}
active = #5eb2c9
inactive = #49899b
highlight = ${xrdb:color2:#B0DCB9}
error = ${xrdb:color9:#507aa6}

[bar/wpgtk]
monitor = ${env:MONITOR}
width = 100%
height = 24
offset-y = 0%
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
label-line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = "xft:Source Code Pro:size=10;2"
font-1 = "Font Awesome 5 Free:style=Solid:size=10;2"

modules-left = i3
modules-center = date
modules-right =  volume separator vpn-status separator wlan separator power
;modules-right =  volume separator battery separator vpn-status separator wlan separator power

tray-position = none
tray-padding = 10
tray-background = ${colors.inactive}

[module/xwindow]
type = internal/xwindow
format-background = ${colors.active}
format-padding = 1
label = %title:0:25: ...%

[module/i3]
type = internal/i3
format = <label-mode><label-state>
index-sort = true
wrapping-scroll = false
fuzzy-matching = true

label-focused = %index%
label-unfocused = %index%
label-visible = %index%
label-urgent = %index%

; Only show workspaces on the same output as the bar
pin-workspaces = false

label-mode-padding = 1
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.inactive}

label-focused-background = ${colors.active}
label-focused-padding = 1

label-unfocused-padding = 1
label-unfocused-background = ${colors.inactive}

label-visible-background = ${colors.inactive}
label-visible-padding = 1

label-urgent-background = ${colors.inactive}
label-urgent-padding = 1

[module/vpn-status]
type = custom/script
exec = ~/.config/polybar/scripts/nm-vpn-status.sh
interval = 5
format-background = ${colors.inactive}
format-padding = 1

[module/power]
type = custom/text
content = "   " 
